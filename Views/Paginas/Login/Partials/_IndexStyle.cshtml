<style type="text/css">
    body {
        overflow: hidden;
    }

    .page-content {
        background: #fff !important;
    }

    .smart-midle-container {
        width: 100%;
        padding-top: 10%;
        text-align: center;
    }

    .smart-login-table {
        width: 270px;
        margin: 0 auto;
        border-radius: 4px;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
    }

    .smart-login-status {
        padding-top: 8px;
    }

    .smart-login-message {
        color: #ee4036;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 8pt;
    }

    .smart-icon-td {
        color: #ee4036;
        font-size: 16pt;
        width: 50px;
        text-align: center;
    }

    .smart-table-sp {
        height: 15pt;
    }

    .smart-no-border-input {
        color: #414141;
        width: 100%;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 9.5pt;
        letter-spacing: 1px;
        padding-top: 5px;
        padding-left: 0;
        padding-right: 8pt;
        padding-bottom: 0;
        border: none !important;
        outline: none !important;
    }

    .smart-control-base {
        height: 12px;
        width: 100%;
        border-top: none;
        border-left: 2px solid var(--main-color);
        border-right: 2px solid var(--main-color);
        border-bottom: 2px solid var(--main-color);
    }

    .smart-control-invalid-span {
        color: #ee4036;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 8pt;
        width: 100%;
        text-align: center;
    }

    .smart-forgot-pass-td {
        text-align: right;
        padding-top: 5pt;
    }

    .smart-forgot-pass {
        color: #a2a2a4;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 8pt;
        cursor: pointer;
        transition: .4s;
        -moz-transition: .4s;
        -webkit-transition: .4s;
    }

        .smart-forgot-pass:hover {
            color: #ee4036;
        }

    .smart-button-td {
        padding-top: 15pt;
    }

    .btn-smart-red {
        color: #e5e5e5;
        background: #ee4036;
        font-family: Arial, Helvetica, sans-serif;
        cursor: pointer;
        width: 100%;
        border: 4px solid #ee4036;
        transition: .4s;
        -moz-transition: .4s;
        -webkit-transition: .4s;
    }

        .btn-smart-red:hover {
            color: #fff;
            background: var(--main-color); /*hover do botão entrar*/
        }

        .btn-smart-red:focus {
            color: #e5e5e5;
            border-color: #a82e26;
        }

    #tx_login-error {
        display: none !important;
    }

    #tx_senha-error {
        display: none !important;
    }

    .smart-copyrigth {
        color: #a2a2a4;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        margin: 0 auto;
        bottom: 10pt;
        left: 25%;
        right: 25%;
        position: absolute;
        font-size: 8pt;
        text-align: center;
    }
</style>